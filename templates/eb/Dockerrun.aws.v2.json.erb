{
  "AWSEBDockerrunVersion": "2",
  "authentication": {
    "bucket": "cu-cs-dockercfg",
    "key": ".dockercfg"
  },
  "volumes": [
    {
      "name": "petshop-efs-mount",
      "host": {
        "sourcePath": "/mnt/efs/petshop"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "petshop",
      "image": "dtr.cucloud.net/cs/petshop-<%= @environment %>:v_<%= @build_number %>",
      "environment": [
        {
          "name": "EXAMPLE_KEY",
          "Value": "example-value"
        }
      ],
      "essential": true,
      "memory": <%= @container_memory_mb %>,
      "mountPoints": [
        {
          "sourceVolume": "petshop-efs-mount",
          "containerPath": "/var/petshop",
          "readOnly": false
        }
      ],
      "portMappings": [
        {
          "hostPort": 8080,
          "containerPort": 8080
        },{
          "hostPort": 8443,
          "containerPort": 8443
        }
      ]
    }
  ]
}
